block localScript
    script.
        $('.ETab').eq(0).ETab({
            defaultIndex: 2
        });
        $('.ETab').eq(1).ETab({
            event: 'mouseover'
        });
        $('.ETab').eq(2).ETab({
            event: 'mouseover',
            delay: 200
        });
        $('.ETab').eq(3).ETab({
            onReady: function() {
                this.contents.eq(1).ETab({
                    selector: {
                        item: '.sub-item',
                        content: '.sub-content'
                    }
                });
            }
        });
        $('.ETab').eq(4).ETab({
            lazyload: 'data-src'
        });
