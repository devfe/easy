block localScript
  script.
    $('.ETab').eq(0).ETab({
      defaultIndex: 2
    });
    $('.ETab').eq(1).ETab({
      event: 'mouseover'
    });
    $('.ETab').eq(2).ETab({
      event: 'mouseover',
      delay: 200
    });
    $('.ETab').eq(3).ETab({
      onReady: function () {
        this.items.eq(1).ETab({
          selector: {
            trigger: '.sub-item',
            item   : '.sub-content'
          }
        });
      }
    });
    $('.ETab').eq(4).ETab({
      lazyload: 'data-src'
    });
    $('.ETab').eq(5).ETab({
      a: 1
    });
